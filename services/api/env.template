# データベースの設定
DATABASE_NAME=${DATABASE_NAME}
DATABASE_USER=${DATABASE_USER}
DATABASE_PASSWORD=${DATABASE_PASSWORD}
DATABASE_HOST=${DATABASE_HOST}
DATABASE_PORT=${DATABASE_PORT}

# メールサーバーの設定
EMAIL_IMAP_USERNAME=${EMAIL_IMAP_USERNAME}
EMAIL_IMAP_PASSWORD=${EMAIL_IMAP_PASSWORD}
EMAIL_IMAP_PORT=${EMAIL_IMAP_PORT}
EMAIL_IMAP_SSL=${EMAIL_IMAP_SSL}
EMAIL_IMAP_HOST=${EMAIL_IMAP_HOST}

DEBUG=${DEBUG}

# Number of workers per CPU core
WORKERS_PER_CORE=${WORKERS_PER_CORE}

# Maximum number of workers
MAX_WORKERS=${MAX_WORKERS}

# Number of concurrent web workers
WEB_CONCURRENCY=${WEB_CONCURRENCY}

# Host address
HOST=${HOST}

# Port number
PORT=${PORT}

# Bind address (overrides HOST and PORT)
BIND=${BIND}

# Log level for Gunicorn
LOG_LEVEL=${LOG_LEVEL}

# Access log file (use "-" for stdout)
ACCESS_LOG=${ACCESS_LOG}

# Error log file (use "-" for stdout)
ERROR_LOG=${ERROR_LOG}

# Timeout for graceful worker shutdown (in seconds)
GRACEFUL_TIMEOUT=${GRACEFUL_TIMEOUT}

# Timeout for worker requests (in seconds)
TIMEOUT=${TIMEOUT}

# Keep-alive timeout (in seconds)
KEEP_ALIVE=${KEEP_ALIVE}
